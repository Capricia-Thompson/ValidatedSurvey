@{
    ViewData["Title"] = "Home Page";
}
@model User
<form asp-action="ReviewUser" asp-controller="Home" method="post"
    class="container border border-black border-3 rounded w-75 mx-auto h-75 p-5 m-5">
    <div class="d-flex m-3 justify-content-between">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="w-50">
        <span asp-validation-for="Name"></span>
    </div>
    <div class="d-flex m-3 justify-content-between">
        <label asp-for="Location"></label>
        <select asp-for="Location" class="w-50">
            <option value="Online">Online</option>
            <option value="In-person">In-person</option>
        </select>
    </div>
    <div class="d-flex m-3 justify-content-between">
        <label asp-for="Language"></label>
        <select asp-for="Language" class="w-50">
            <option value="Python">Python</option>
            <option value="Javascript">Javascript</option>
            <option value="C#">C#</option>
            <option value="Java">Java</option>
        </select>
    </div>
    <div class=" m-3 justify-content-between">
        <label asp-for="Comment"></label>
        <input asp-for="Comment" class="w-100">
        <span asp-validation-for="Comment"></span>
    </div>
    <div class="d-flex justify-content-end">
        <input type="Submit">
    </div>

</form>
